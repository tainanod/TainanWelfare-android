<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center" >

    <TextView
        android:id="@+id/TVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LLFunctionBar"
        android:layout_alignRight="@+id/LLFunctionBar"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="TEST護理之家"
        android:textColor="#0976bc"
        android:textSize="25sp" />

    <View
        android:id="@+id/divideLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/TVName"
        android:layout_below="@+id/TVName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"
        />

    <TextView
        android:id="@+id/TVScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LLFunctionBar"
        android:layout_alignRight="@+id/LLFunctionBar"
        android:layout_below="@+id/divideLine"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textIsSelectable="true"
        android:text="評等:0"
        android:textSize="17.5sp" 
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/TVAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LLFunctionBar"
        android:layout_alignRight="@+id/LLFunctionBar"
        android:layout_below="@+id/TVScore"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textIsSelectable="true"
        android:text="地址:中西區崇德路1號"
        android:textSize="17.5sp"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/TVPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LLFunctionBar"
        android:layout_alignRight="@+id/LLFunctionBar"
        android:layout_below="@+id/TVAddress"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="電話:06-11111111"
        android:textSize="17.5sp"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/TVInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LLFunctionBar"
        android:layout_alignRight="@+id/LLFunctionBar"
        android:layout_below="@+id/TVPhone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="5dp"
        android:text="相關資訊:"
        android:textSize="17.5sp"
        android:textColor="#757575"
        android:textIsSelectable="true"
        android:autoLink="web|email|phone" />

    <LinearLayout
        android:id="@+id/LLFunctionBar"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_below="@+id/TVInfo"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/IVLoaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/detailedicon_01" />

        <ImageView
            android:id="@+id/IVNavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/detailedicon_02" />

        <ImageView
            android:id="@+id/IVhPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/detailedicon_03" />

        <ImageView
            android:id="@+id/IVClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/detailedicon_04" />
    </LinearLayout>

</RelativeLayout>