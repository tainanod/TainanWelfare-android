<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	
    <item
        android:bottom="3dp"
        android:left="6dp"
        android:right="6dp"
        android:top="3dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="20dp" />

            <solid android:color="#EE5579" />
        </shape>
    </item>
    <item
        android:bottom="50dp"
        android:left="11dp"
        android:right="11dp"
        android:top="8dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:topLeftRadius="20dp" 
                android:topRightRadius="20dp" />

            <solid android:color="#ffffff" />

            <padding
                android:bottom="5dp"
                android:left="11dp"
                android:right="11dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>